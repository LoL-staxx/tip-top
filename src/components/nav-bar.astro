---
import Logo from "./img/logo-menu.png"
---
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


<header id="header">
    <div class="right" id="right">
        <div class="logo">
               <img src= {Logo} alt="Logo">
        </div>
        <div class="links" id="links">
            <ul class="link-url">
                <li><a href="#">Inicio</a></li>
                <li><a href="#menu">Menu</a></li>
                <li><a href="#promocion">Promociones</a></li>
                <li><a href="#">Franquicias</a></li>
            
            </ul>

        </div>

        <div class="burger_menu">
            <div class="btn-menu" id="burger_menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

    </div>


    <div class="left">
        <div class="phone-number"><span class="material-symbols-outlined">
call
</span><h3>1-800-2020</h3></div>
        <div class="location"><a href="#">Ven a nuestro local</a></div>
    
    </div>



</header>


<script>

const burger_menu = document.getElementById('burger_menu')
const links = document.getElementById('links')
const right = document.getElementById('right')

burger_menu.addEventListener('click', () =>{
    links.classList.toggle('linkActive')
    burger_menu.classList.toggle('close')
    right.classList.toggle('nav_fixed')
})


</script>




<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap');

#header{
    position: relative;
    width: 100%;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 5;
}

.right{
    position: relative;
    width: 50%;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.burger_menu{
    display: none;
}

.left{
    position: relative;
    width: 35%;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: space-around;
    z-index: 10;
}

.logo{
    position: relative;
    width: 25%;
    height: auto;
}

.logo img{
    width: 80px;
    height: 80px;
}

.links{
    position: relative;
    margin: 0 0 0 10px;
}

.links .link-url{
    display: flex;
    align-items: center;
    justify-content: center;
}

.links .link-url li{
    margin: 0 15px 0 15px;
}

.links .link-url li a{
    font-size: 16px;
    font-weight: 400;
    font-family: 'Roboto', sans-serif;
    transition: all 0.20s;
}

.links .link-url li a:hover{
    color: red;
}
 
.phone-number{
    display: flex;
    align-items: center;
}

.phone-number span{
    margin-right: 10px;
}

.phone-number h3{
    font-size: 18px;
    font-weight: 500;
    font-family:'Roboto', sans-serif;
}

.location{
    width: 170px;
    height: 50px;
    background-color: #FAE325;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 30px;
}

.location:hover{
    background-color: #F2DC25;
    cursor: pointer;
}
 
 .location a{
    font-size: 15px;
    font-weight: 500;
    font-family: 'Roboto', sans-serif;
    color: #333;
 }

 @media (max-width: 500px){
    
     #header{
         color: white;
    }

     .left{
         display: none;
     }

     .right{
         width: 100%;
         justify-content: space-between;
     }

     .links{
         position: fixed;
         width: 100%;
         height: 1155px;
         margin: 0;
         right: -500px;
        background-color: red;
        transition: all .25s;
     }

     .link-url{
         position: absolute;
         top: 50%;
         transform: translate(75% , 50%);
         flex-direction: column;
         text-align: center;
     }

     .links .link-url li{
        margin-bottom: 30px;
    }

    .links .link-url li a{
        font-size: 1.6em;
    }

    .links .link-url li a:hover{
        color: #F2DC25;
    }


     .burger_menu{
         display: inline-block;
         padding-right: 15px;
         width: 40px;
         height: 40px;
         z-index: 100;
         cursor: pointer;
     }

     .logo{
         margin-left: 15px;
         z-index: 100;
     }

     .linkActive{
         right: 0;
     }

     .nav_fixed{
         position: fixed;
     }

     .btn-menu{
         display: flex;
         width: 100%;
         height: 100%;
         flex-direction: column;
         justify-content: center;
         align-items: center;
     }

     .btn-menu span{
         width: 37px;
         height: 4px;
         margin-bottom: 5px;
         position: relative;
         background-color: #444;
         border-radius: 3px;
         transform-origin: 4px 0px;
         transition: all 0.2s linear;
     }

     .close span{
         opacity: 1;
         transform: rotate(45deg) translate(0px, 0px);
         background-color: #fff;
     }

     .close span:nth-child(2){
         transform: rotate(-45deg) translate(-9px, 6px);
     }

     .close span:nth-child(3){
         display: none;
     }



 }

 
 @media (max-width: 450px){
      .link-url{
         position: absolute;
         top: 50%;
         transform: translate(65% , 50%);
         flex-direction: column;
         text-align: center;
     }
 }

 @media (max-width: 420px){
      .link-url{
         position: absolute;
         top: 50%;
         transform: translate( 60%, 50%);
         flex-direction: column;
         text-align: center;
     }
 }

 @media (max-width: 390px){
      .link-url{
         position: absolute;
         top: 50%;
         transform: translate(50% , 50%);
         flex-direction: column;
         text-align: center;
     }
 }


 @media (max-width: 360px){
     @media (max-width: 380px){
      .link-url{
         position: absolute;
         top: 50%;
         transform: translate(45% , 50%);
         flex-direction: column;
         text-align: center;
     }
 }
 }




</style>