---
import New_store from "./img/new-store.png"
import Main_img from "./img/main-img.png"
---
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


<div class="gallery">


<div class="img-box">



<div class="contain">



<div class="red">
    <img src= {Main_img} />
</div>
<div class="white">
    <a href="#"><img src= {New_store} /></a>
</div>

</div>



<div class="buttons">
<button class="btn prev"><span class="material-symbols-outlined">
arrow_back_ios_new
</span></button>
<button class="btn after" id="after"><span class="material-symbols-outlined">
arrow_forward_ios
</span></button>
</div>

</div>





</div>

<!-- css -->

<style>
.gallery{
    position: relative;
    width: 100%;
    height: 100vh;
    padding-bottom: 70px;
}

.contain{
    position: relative;
    max-width: 100vw;
    height: 57vh;
    display: flex;
    overflow-x: scroll;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
}

.contain::-webkit-scrollbar{
    display: none;
}

.contain div{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 0 0 100%;
    padding: 25px;
    scroll-snap-align: start;
}

.btn{
    background-color: #FBC81A;
    width: 50px;
    height: 50px;
    border-radius: 60%;
    font-size: 1em;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
    transition: all 0.25s;
}

.btn:hover{
    background-color: #ECBC19; 
}

.buttons{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 50px;
    margin-top: 30px;
}




.img-box{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

@media (max-width: 500px){
    .buttons{
        display: none;
    }

    .contain div{
        padding: 10px;
    }

    .gallery{
        padding-bottom: 180px;
    }
}

</style>


<!-- Javascript  -->

<script>
const prev = document.querySelector('.prev')
 const after = document.querySelector('.after')
 const contain = document.querySelector('.contain')

after.addEventListener('click', () =>{
    contain.scrollBy(350,0)
})

prev.addEventListener('click', () =>{
    contain.scrollBy(-350,0)
})

   


let i = 1
  
while(i <= contain.children.length){

    let timer = 3500

    let mul = timer * contain.children.length

    setInterval(() =>{
            contain.scrollBy(350, 0)
      }, timer)

    setInterval(() =>{
        contain.scrollBy(-6000,0)
    }, mul)

    i++
}
    


        






//console.log(contain.clientWidth)


</script>